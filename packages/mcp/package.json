{
  "name": "@browseragentprotocol/mcp",
  "version": "0.1.0",
  "description": "BAP MCP Integration - Use Browser Agent Protocol as an MCP server",
  "author": "Browser Agent Protocol",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bap-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/browseragentprotocol/bap.git",
    "directory": "packages/mcp"
  },
  "keywords": [
    "bap",
    "mcp",
    "model-context-protocol",
    "browser",
    "automation",
    "ai",
    "agent",
    "playwright",
    "web-scraping"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@browseragentprotocol/client": "workspace:*",
    "@browseragentprotocol/logger": "workspace:*",
    "@browseragentprotocol/protocol": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
